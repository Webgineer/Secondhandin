<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="10dp"
    tools:context=".MainActivity"
    android:weightSum="10">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/pic_3"
        android:layout_weight="2"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="0.05"
        android:gravity="center">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tour Dates"
            android:textSize="10dp"
            android:textColor="#fff"
            android:layout_weight="0.2"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tickets"
            android:textSize="10dp"
            android:textColor="#fff"
            android:layout_weight="0.2"
            />

        <Button
            android:id="@+id/buttonAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="About"
            android:onClick="onAboutButtonClick"
            android:textSize="10dp"
            android:textColor="#fff"
            android:layout_weight="0.2"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:onClick="onContactButtonClick"
            android:textSize="10dp"
            android:textColor="#fff"
            android:layout_weight="0.2"
            />

        <Button
            android:id="@+id/buttonMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MAIN"
            android:textSize="10dp"
            android:textColor="#fff"
            android:layout_weight="0.2"
            android:onClick="onMainButtonClick"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/pic12"
        android:layout_weight="3.25"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Recipient's e-mail address"
            android:id="@+id/editTextRecipient"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject"
            android:id="@+id/editTextSubject"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Text"
            android:id="@+id/editTextText"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_gravity="center"
            android:onClick="onSendButtonClick"/>
    </LinearLayout>
</LinearLayout>


